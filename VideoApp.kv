    Label:
        id: level_label
        text: 'Level 1'
        font_size: '50sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.07, 'top': 0.95}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 2
        bold: True

    Label:
        id: left_arrow
        text: '<'
        font_size: '100sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.07, 'center_y': 0.5}
        color: 1, 0, 0, 1
        outline_color: 1, 1, 1, 1
        outline_width: 2
        #bold: True

    Label:
        id: right_arrow
        text: '>'
        font_size: '100sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.93, 'center_y': 0.5}
        color: 1, 0, 0, 1
        outline_color: 1, 1, 1, 1
        outline_width: 2
        #bold: True

    Label:
        id: insert_label
        text: 'Insert ball to start'
        font_size: '80sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.5, 'top': 0.95}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 3
        bold: True

    Label:
        id: time_label
        text: ''
        font_size: '50sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.07, 'top': 0.95}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 2
        bold: True

<LeftScreen>:
    on_enter: root.start_clock()
    name: 'left'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Black background color
        Rectangle:
            pos: self.pos
            size: self.size


    FloatLayout:
        size_hint: None, None

    Image:
        id: img2
        size_hint: (0.15, 0.15)
        source: 'enter_symbol.png'
        pos_hint: {'center_x': .5, 'center_y': .3}
        color: 1, 1, 1, 0.75

    Label:
        id: letter_1
        text: ''
        font_size: '140sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.4, 'top': 0.35}
        color: 1, 0, 0, 0.75  # Red label color
        outline_color: 1, 1, 1, 0.75  # White outline color
        outline_width: 3
        bold: True

    Label:
        id: letter_2
        text: 'A'
        font_size: '180sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.5, 'top': 0.35}
        color: 1, 0, 0, 1
        outline_color: 1, 1, 1, 1
        outline_width: 3
        bold: True

    Label:
        id: letter_3
        text: 'B'
        font_size: '140sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.6, 'top': 0.35}
        color: 1, 0, 0, 0.75
        outline_color: 1, 1, 1, 0.75
        outline_width: 2
        bold: True

    Label:
        id: pos_marker
        text: '^'
        font_size: '32sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        color: 1, 0, 0, 1
        outline_color: 1, 1, 1, 1
        outline_width: 2
        bold: True


    Label:
        id: score_label
        text: 'Enter your name'
        font_size: '50sp'
        size_hint: (None, None)
        pos_hint: {'center_x': .5, "center_y":0.75}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 2
        bold: True

    Label:
        id: name_label
        text: ''
        font_size: '75sp'
        size_hint: (None, None)
        pos_hint: {'center_x': .5, "center_y":0.5}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 2
        bold: True

    Label:
        id: time_label
        text: ''
        font_size: '50sp'
        size_hint: (None, None)
        pos_hint: {'center_x': .5, "center_y":0.85}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 2
        bold: True



<RightScreen>:
    on_enter: root.update_high_scores(); root.start_clock()
    name: 'right'

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Black background color
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size_hint: None, None