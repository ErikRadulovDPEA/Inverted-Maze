<MainScreen>:
    on_enter: root.start_video()
    name: 'main'

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Black background color
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size_hint: root.width, root.height

    Image:
        id: img2
        size_hint: 1, 1
        fit_mode: "contain"

    Image:
        id: img1
        size_hint: 1, 1
        fit_mode: "contain"




#    DPEAButton:
#        id: temp_but_1
#        font_size: self.width * .3
#        text: '<'
#        size_hint: .1, .1
#        pos_hint: {"center_x": .4, "center_y":0.1}
#        color: 1, 0, 0, 1
#        on_press: root.red_button()

    Button:
        id: temp_but_2
        font_size: self.width * .3
        text: '>'
        size_hint: .1, .1
        pos_hint: {"center_x": .6, "center_y":0.1}
        color: 0, 0, 1, 1
        on_press: root.blue_button()



    Label:
        id: level_label
        text: 'Level 1'
        font_size: '50sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.07, 'top': 0.95}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 2
        bold: True

    Image:
        id: right_arrow_symbol
        size_hint: (0.125, 0.125)
        source: 'right_arrow_symbol.png'
        pos_hint: {'center_x': 0.93, 'center_y': 0.495}

    Image:
        id: left_arrow_symbol
        size_hint: (0.125, 0.125)
        source: 'left_arrow_symbol.png'
        pos_hint: {'center_x': 0.07, 'center_y': 0.495}


    Label:
        id: insert_label
        text: 'Insert ball to start'
        font_size: '80sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.5, 'top': 0.95}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 3
        bold: True

    Label:
        id: time_label
        text: ''
        font_size: '50sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.07, 'top': 0.95}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 2
        bold: True


