<LeftScreen>:
    on_enter: root.start_clock()
    name: 'left'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Black background color
        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: 1, 1, 1, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 15

        Color:
            rgba: 1, 0, 0, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 10

    FloatLayout:
        size_hint: None, None

    Label:
        id: letter_1
        text: 'A'
        font_size: '60sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.4, 'top': 0.95}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 3
        bold: True

    Label:
        id: letter_2
        text: 'A'
        font_size: '50sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.5, 'top': 0.95}
        color: 1, 0, 0, 0.75
        outline_color: 1, 1, 1, 0.75
        outline_width: 3
        bold: True

    Label:
        id: letter_3
        text: 'A'
        font_size: '50sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.6, 'top': 0.95}
        color: 1, 0, 0, 0.75
        outline_color: 1, 1, 1, 0.75
        outline_width: 3
        bold: True

    Label:
        id: pos_marker
        text: '^'
        font_size: '32sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.4, 'center_y': 0.80}
        color: 1, 0, 0, 1
        outline_color: 1, 1, 1, 1
        outline_width: 3
        bold: True

    DPEAButton:
        id: letter_enter
        text: 'ENTER'
        font_size: self.width * .3
        size_hint: .1, .1
        pos_hint: {"center_x": .5, "center_y":0.1}
        color: 0.9, 1, 0, 1
        on_press: root.letter_button()

    DPEAButton:
        id: test_button
        text:'back'
        size: 25, 25
        pos_hint: {"center_x": 0.15, "center_y":0.15}
        color: 0, 1, 0, 1
        on_press: root.switch_screen()

<RightScreen>:
    on_enter: root.start_clock(); root.update_high_scores()
    name: 'right'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text:'back'
        size: 25, 25
        pos_hint: {"center_x": 0.15, "center_y":0.15}
        color: 0, 1, 0, 1
        on_press: root.switch_screen()

