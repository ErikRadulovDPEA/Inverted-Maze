<MainScreen>:
    on_enter: root.start_video()
    name: 'main'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Black background color
        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: 1, 1, 1, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 15

        Color:
            rgba: 1, 0, 0, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 10

    FloatLayout:
        size_hint: None, None

    Image:
        id: img1
        size_hint: .75, .75
        pos_hint: {'center_x': .5, 'center_y': .5}

    Label:
        id: level_label
        text: 'Level 1'
        font_size: '20sp'
        size_hint: (None, None)
        pos_hint: {'left': 0.3, 'top': 0.95}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 3
        bold: True

