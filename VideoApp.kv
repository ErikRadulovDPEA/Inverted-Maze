<MainScreen>:
    on_enter: root.start_video()
    name: 'main'

    FloatLayout:
        size_hint: root.width, root.height

    Image:
        id: img1
        size_hint: 1, 1
        allow_stretch: True
        keep_ratio: False
        pos_hint: {'center_x': .5, 'center_y': .5}


    Label:
        id: level_label
        text: 'Level 1'
        font_size: '35sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.1, 'top': 0.95}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 2
        bold: True

    Label:
        id: insert_label
        text: 'Insert ball to start'
        font_size: '35sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.12, 'top': 0.15}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        #color: 1, 1, 1, 1
        #outline_color: 1, 0, 0, 1
        outline_width: 2
        bold: True

    Label:
        id: time_label
        text: ''
        font_size: '35sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.5, 'top': 0.15}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 2
        bold: True

<LeftScreen>:
    on_enter: root.start_clock()
    name: 'left'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Black background color
        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: 1, 1, 1, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 15

        Color:
            rgba: 1, 0, 0, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 10

    FloatLayout:
        size_hint: None, None

    Label:
        id: letter_1
        text: 'A'
        font_size: '180sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.4, 'top': 0.55}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 3
        bold: True

    Label:
        id: letter_2
        text: 'A'
        font_size: '140sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.5, 'top': 0.55}
        color: 1, 0, 0, 0.75
        outline_color: 1, 1, 1, 0.75
        outline_width: 3
        bold: True

    Label:
        id: letter_3
        text: 'A'
        font_size: '140sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.6, 'top': 0.55}
        color: 1, 0, 0, 0.75
        outline_color: 1, 1, 1, 0.75
        outline_width: 2
        bold: True

    Label:
        id: pos_marker
        text: '^'
        font_size: '32sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.4, 'center_y': 0.4}
        color: 1, 0, 0, 1
        outline_color: 1, 1, 1, 1
        outline_width: 2
        bold: True

    DPEAButton:
        id: letter_enter
        text: 'TEMP'
        font_size: self.width * .3
        size_hint: .1, .1
        pos_hint: {"center_x": .5, "center_y":0.1}
        color: 0.9, 1, 0, 1
        on_press: root.letter_button()

    Label:
        id: score_label
        text: 'Enter your name'
        font_size: '50sp'
        size_hint: (None, None)
        pos_hint: {'center_x': .5, "center_y":0.75}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 2
        bold: True

    Label:
        id: time_label
        text: ''
        font_size: '50sp'
        size_hint: (None, None)
        pos_hint: {'center_x': .5, "center_y":0.85}
        color: 1, 0, 0, 1  # Red label color
        outline_color: 1, 1, 1, 1  # White outline color
        outline_width: 2
        bold: True



<RightScreen>:
    on_enter: root.update_high_scores(); root.start_clock()
    name: 'right'

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Black background color
        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: 1, 1, 1, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 15

        Color:
            rgba: 1, 0, 0, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 10

    FloatLayout:
        size_hint: None, None
