<MainScreen>:

    name: 'main'
    FloatLayout:
        size_hint: None, None

    Image:
        id: img1
        size_hint: .75, .75
        pos_hint: {'center_x': .5, 'center_y': .5}

    DPEAButton:
        id: h_flip_button
        text: 'H_FLIP'
        font_size: self.width * .3
        size_hint: .1, .1
        pos_hint: {"center_x": .25, "center_y":0.1}
        color: 0.9, 1, 0, 1
        on_press: root.toggle_h_flip()

    DPEAButton:
        id: v_flip_button
        text: 'V_FLIP'
        font_size: self.width * .3
        size_hint: .1, .1
        pos_hint: {"center_x": .50, "center_y":0.1}
        color: 0.9, 1, 0, 1
        on_press: root.toggle_v_flip()

    DPEAButton:
        id: vh_flip_button
        text: 'VH_FLIP'
        font_size: self.width * .3
        size_hint: .1, .1
        pos_hint: {"center_x": .75, "center_y":0.1}
        color: 0.9, 1, 0, 1
        on_press: root.toggle_hv_flip()

    DPEAButton:
        id: test_button
        text: '>'
        font_size: self.width * .5
        size_hint: .1, 1
        pos_hint: {"x": .9, "y":0}
        color: 0, 1, 0, 1
        on_press: root.switch_to_right()

    DPEAButton:
        text: "<"
        font_size: self.width * .5
        size_hint: .1, 1
        pos_hint: {"x": 0, "y":0}
        color: 1, 0, 0, 1
        on_press: root.switch_to_left()

<LeftScreen>:

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text:'back'
        size: 100, 100
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        color: 1, 0, 0, 1
        on_press: root.switch_screen()

<RightScreen>:

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text:'back'
        size: 25, 25
        pos_hint: {"center_x": 0.15, "center_y":0.15}
        color: 0, 1, 0, 1
        on_press: root.switch_screen()

    Label:
        text: 'High Scores'
        font_size: '32sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.5, 'top': 0.95}
        color: 0, 0, 0, 1

    Label:
        text: '1st'
        font_size: '24sp'
        size_hint: (None, None)
        pos_hint: {'left': 0.1, 'top': 0.85}
        color: 0, 0, 0, 1

    Label:
        text: '99:99'
        font_size: '24sp'
        size_hint: (None, None)
        pos_hint: {'right': 0.9, 'top': 0.85}
        color: 0, 0, 0, 1

    Label:
        text: 'AAA'
        font_size: '24sp'
        size_hint: (None, None)
        pos_hint: {'center_x': 0.5, 'top': 0.85}
        color: 0, 0, 0, 1